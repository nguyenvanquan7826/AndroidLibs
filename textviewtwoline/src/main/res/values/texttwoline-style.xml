<resources>

    <style name="SettingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:minHeight">?attr/listPreferredItemHeight</item>
    </style>

    <style name="SwitchCompatStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">?attr/listPreferredItemPaddingRight</item>
    </style>

    <style name="TextViewTwoTextLineTextTitleStyle" parent="SettingsItemStyle">
